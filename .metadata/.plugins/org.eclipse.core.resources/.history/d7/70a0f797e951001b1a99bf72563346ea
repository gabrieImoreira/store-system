package aplicativo;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import dominio.Pessoa;

public class Programa {

	public static void main(String[] args) {
		
		Pessoa p1 = new Pessoa();
		p1.setId(null);
		p1.setName("Marc√£o");
		p1.setEmail("marcao@gmail.com");
		Pessoa p2 = new Pessoa(null, "Carlos da Silva", "carlos@gmail.com");
		Pessoa p3 = new Pessoa(null, "Gabriel Moreira", "gams@wow.com");
				
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("example-jpa"); // persistence.xml name
		EntityManager em = emf.createEntityManager();
	
		em.getTransaction().begin();
		em.persist(p1);
		em.persist(p2);
		em.persist(p2);
		em.getTransaction().commit();
		System.out.println("Persisted!");
	}
}
